<Window x:Class="Workshop_03_Army_Editor.TrooperEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Workshop_03_Army_Editor"
        mc:Ignorable="d"
        Title="TrooperEditor" Height="450" Width="450">
    <Grid>
        <StackPanel x:Name="stack">
            <Label Padding="20px" FontSize="16" Background="LightBlue" >Power</Label>
            <TextBox Padding="20px" FontSize="16" ></TextBox>
            <Label Padding="20px" FontSize="16" Background="LightBlue" >Vitality</Label>
            <TextBox Padding="20px" FontSize="16" ></TextBox>
            <Label Padding="20px" FontSize="16" Background="LightBlue" >Cost</Label>
            <TextBox Padding="20px" FontSize="16" ></TextBox>
            <Button Padding="20px" Content="Save" Click="Button_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
